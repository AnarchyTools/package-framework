(package
    :name "iosframework"

    :tasks {
        :default {
            :tool "atllbuild"
            :output-type "dynamic-library"
            :sources ["src/**.swift"]
            :name "FooFramework"
            :framework true
            :bitcode true
        }
        :packageatbin {
            :tool "packageatbin"
            :name "FooFramework"
            :platforms ["all"]
            :atllbuild-task "default"
        }
        :package {
            :tool "shell"
            :script "../../.atllbuild/products/package-framework --name FooFramework --info-plist Info.plist"
            :dependencies ["packageatbin"]
        }
        :simcheck {
            :tool "shell"
            :script "xcodebuild -scheme UseiOSFramework test -destination 'platform=iOS Simulator,name=iPhone 6'"
            :dependencies ["package"]
        }
        :devicecheck {
            :tool "shell"
            :script "xcodebuild -scheme UseiOSFramework test -destination 'platform=iOS,name=invalid'"
            :dependencies ["package"]

        }
        :check {
            :tool "nop"
            :dependencies ["simcheck" "devicecheck"]
        }
    }

)